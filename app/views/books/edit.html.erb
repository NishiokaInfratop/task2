<h1>Editing Book</h1>
<!-- editの場合は@book==nilはありえないのでnilかどうかの判定は不要 ---->
<% if @book.errors.any? %>
   <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>

  <h4 class="field">タイトル</h4>
  <%= f.text_field :title %>


  <h4 class="field">本文</h4>
  <%= f.text_area :body %>

  <div class="actions"> <%= f.submit 'Update Book' %> </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
